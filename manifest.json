{
    "manifest_version": 2,
    "name": "FPL Player Photo Replacer",
    "version": "1.2",
    "description": "Replaces FPL shirt images with player photos",
    "permissions": [
        "activeTab",
        "https://fantasy.premierleague.com/*",
        "https://fpldict.zanaris.dev/",
        "https://resources.premierleague.com/*"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "https://fantasy.premierleague.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}